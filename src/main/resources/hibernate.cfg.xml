<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate- configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/poo-infracciones?useSSL=false</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping resource="hbm/EstadoActa.hbm.xml"/>
    <mapping resource="hbm/Conductor.hbm.xml"/>
    <mapping resource="hbm/Licencia.hbm.xml"/>
    <mapping resource="hbm/ActaConstatacion.hbm.xml"/>
    <mapping resource="hbm/Infraccion.hbm.xml"/>
    <mapping resource="hbm/TipoDeInfraccion.hbm.xml"/>
    <mapping resource="hbm/OrganismoEmisor.hbm.xml"/>
    <mapping resource="hbm/Vehiculo.hbm.xml"/>
    <mapping resource="hbm/AutoridadConstatacion.hbm.xml"/>
    <mapping resource="hbm/Ruta.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
